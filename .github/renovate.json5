{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'github>cert-manager/renovate-config:default.json5',
  ],
  enabledManagers: [
    'custom.regex',
    'github-actions',
    'gomod',
  ],
  customManagers: [
    {
      customType: 'regex',
      managerFilePatterns: [
        'modules/tools/**',
      ],
      matchStrings: [
        '(?:^|\\r\\n|\\r|\\n)#\\s*renovate:\\s*datasource=(?<datasource>\\S+)\\s+packageName=(?<packageName>\\S+)(?:^|\\r\\n|\\r|\\n)\\S+ \\+= \\S+=(?<currentValue>\\S+)',
        '(?:^|\\r\\n|\\r|\\n)#\\s*renovate:\\s*datasource=(?<datasource>\\S+)\\s+packageName=(?<packageName>\\S+)(?:^|\\r\\n|\\r|\\n)\\S+ (:|\\?)= (?<currentValue>\\S+)'
      ],
    },
  ],
  packageRules: [
    {
      groupName: 'Tools',
      matchManagers: [
        'custom.regex',
      ],
      postUpgradeTasks: {
        commands: [
          'make vendor-go learn-tools-shas',
        ],
        executionMode: 'branch',
      }
    },
    {
      groupName: null,
      matchDatasources: [
        'golang-version',
      ],
      separateMinorPatch: true,
      postUpgradeTasks: {
        commands: [
          'make learn-golang-shas',
        ],
      },
    },
    {
      matchManagers: [
        'custom.regex',
      ],
      matchUpdateTypes: [
        'major',
        'digest',
      ],
      dependencyDashboardApproval: true,
    },
    {
      matchPackageNames: [
        'github.com/inteon/go-licenses/**', // FIXME(inteon): See if we can get back to upstream go-licenses
      ],
      enabled: false,
    }
  ],
}
